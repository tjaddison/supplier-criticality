# Auth0 Configuration (@auth0/nextjs-auth0 v4.10.0)
# Required environment variables for Auth0 SDK
AUTH0_SECRET=your-long-random-secret-at-least-32-characters
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# DynamoDB Table Names
SUPPLIERS_TABLE_NAME=suppliers
SUPPLIER_UPDATES_TABLE_NAME=supplier-updates
SUPPLIER_EVALUATIONS_TABLE_NAME=supplier-evaluations
USER_PROFILES_TABLE_NAME=user-profiles

# Email Configuration
EMAIL_FROM=noreply@yourdomain.com
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email-user
EMAIL_PASS=your-email-password